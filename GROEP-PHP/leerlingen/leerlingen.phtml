                $stmt->execute();

                $_SESSION['melding'] = 'Boek succesvol geleend!';
                $_SESSION['melding_type'] = 'success';
            } else {
                // Boek is niet beschikbaar ‚Üí reserveren
                $stmt = $conn->prepare("INSERT INTO reserveringen (gebruiker_id, boek_id, status) VALUES (?, ?, 'gereserveerd')");
